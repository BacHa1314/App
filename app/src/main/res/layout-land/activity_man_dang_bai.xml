<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ManDangBai">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/purple_200"
                android:gravity="center"
                android:text="Đăng bài"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/dbtieude"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/botron1"
                android:hint="  Tên tác phẩm"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_500"></EditText>

            <EditText
                android:id="@+id/dbnoidung"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/botron1"
                android:hint="   Nội dung"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_500"></EditText>

            <EditText
                android:id="@+id/dbimg"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/botron1"
                android:hint="   Ảnh bìa"
                android:inputType="textUri"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_500"></EditText>

            <Button
                android:id="@+id/dbdangbai"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/botron"
                android:text="Đăng bài (nhập link)"
                android:textColor="@color/white"></Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>