<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AccountFragmment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/anhmain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/user" />

        <TextView
            android:id="@+id/tvtentaikhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/tvgmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="@color/gray_500"
            app:layout_constraintEnd_toEndOf="@+id/tvtentaikhoan"
            app:layout_constraintStart_toStartOf="@+id/tvtentaikhoan"
            app:layout_constraintTop_toBottomOf="@+id/tvtentaikhoan" />

        <Button
            android:id="@+id/btndangxuat"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:text="Đăng xuất"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@drawable/botron"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>